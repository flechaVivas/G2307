ScreenManager:
    LoginScreen:
    MenuScreen:
    MostrarScreen:
    AgregarScreen:
    ModificarScreen:
    EliminarScreen:

<LoginScreen>:
    name: "login"
    MDCard:
        size_hint: None, None
        size: '850','850'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'vertical'
        Image:
            source: 'static/logo-utn.png'
            lsize: self.texture_size
        MDTextFieldRound:
            id: user
            icon_left: "account-check"
            hint_text: "Usuario"
            foreground_color: 0, 0, 1, 1
            color_mode: 'accent'
            size_hint_x: None
            width: 400
            font_size: 30
            font_color: "Black"
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: password
            icon_left: "key-variant"
            hint_text: "Contraseña"
            foreground_color: 0, 0, 1, 1
            color_mode: 'accent'
            size_hint_x: None
            width: 400
            font_size: 30
            pos_hint: {"center_x": 0.5}
            password: True
        MDFillRoundFlatButton:
            text: 'Entrar'
            font_size: 30
            pos_hint: {"center_x": 0.5}
            on_release: 
                app.login()
                root.manager.transition.direction = "left"

<MenuScreen>:
    name: "menu"
    MDCard:
        size_hint: None, None
        size: '850','850'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'vertical'
        Image:
            source: 'static/logo-utn.png'
            lsize: self.texture_size
        MDFillRoundFlatButton:
            text: 'Mostrar materias'
            font_size: 30
            pos_hint: {"center_x": 0.5}
            on_press: 
                root.manager.current = 'mostrar'
                app.mostrar()
                root.manager.transition.direction = "left"
        MDFillRoundFlatButton:
            text: 'Agregar una materia'
            font_size: 30
            pos_hint: {"center_x": 0.5}
            on_press: 
                root.manager.current = 'agregar'
                root.manager.transition.direction = "left"
        MDFillRoundFlatButton:
            text: 'Modificar una materia'
            font_size: 30
            pos_hint: {"center_x": 0.5}
            on_press: 
                root.manager.current = 'modificar'
                root.manager.transition.direction = "left"
        MDFillRoundFlatButton:
            text: 'Eliminar una materia'
            font_size: 30
            pos_hint: {"center_x": 0.5}
            on_press: 
                root.manager.current = 'eliminar'
                root.manager.transition.direction = "left"

<MostrarScreen>:
    name: 'mostrar'
    MDCard:
        size_hint: None, None
        size: '850','850'
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'vertical'
        MDLabel:
            id: nombre_label
            text: 'Materias: '
            halign: 'center'
            vallign: "middle"
            font_size: 32
            font_color: "Black"
        MDRectangleFlatButton:
            text: 'Volver'
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_release: 
                root.manager.current = 'menu'
                root.manager.transition.direction = "right"


